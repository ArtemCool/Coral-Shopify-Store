<div class="bg-white">
  <div class="container mx-auto px-3 py-9">
    <h1 class="text-center text-3xl font-roboto font-medium pb-6">{{ section.settings.new-product-collection.title }}</h1>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-x-4 gap-y-5">
      {% for product in section.settings.new-product-collection.products %}
        <div class="">
          {% render 'product-card', product_product: product %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "New Products Collection",
    "settings": [
      {
        "type": "collection",
        "id": "new-product-collection",
        "label": "New Product Collection"
      }
    ]
  }
{% endschema %}